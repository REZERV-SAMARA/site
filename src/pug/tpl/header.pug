header.header.container-full
	.row.header-site
		.container.clearfix
			.header-top
				.header-top-title
					p.header-top-title-image
						|<@IF:[*id:is(1):or:is(0)*]>
						img(alt="" src!="[[phpthumb? &input=`[(logotype)]` &options=`w=64,h=64,f=png`]]")
						|<@ELSE>
						a(href="/")
							img(alt="" src!="[[phpthumb? &input=`[(logotype)]` &options=`w=64,h=64,f=png`]]")
						|<@ENDIF>
					p.header-top-title-title
						|[(company_name:notags)]
				.header-top-bvi
					a(href="javascript:;" class="bvi-open btn" title="Версия для слабовидящих")
						i.glyph-glass-eye-spectacles
	.row.header-nav
		.container.clearfix
			.navbar-site
				.navigation--button
					.nav-btn
						svg.svg___burger(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 900 900")
							g.svg___burger_dashes
								path.svg___burger_dash_bottom.menu_icon_dash(d="M145 609l609 0c74,0 74,111 0,111l-609 0c-74,0 -74,-111 0,-111z")
								path.svg___burger_dash_middle.menu_icon_dash(d="M146 394c203,0 406,0 609,0 74,0 74,111 0,111 -203,0 -406,0 -609,0 -74,0 -74,-111 0,-111z")
								path.svg___burger_dash_top.menu_icon_dash(d="M146 179l609 0c74,0 74,111 0,111l-609 0c-74,0 -74,-111 0,-111z")
				nav
					|[[DLMenu?
					|	&parents=`0`
					|	&maxDepth=`1`
					|	&outerTpl=`@CODE:<ul[+classes+]>[+wrap+]</ul>`
					|	&rowTpl=`@CODE:<li[+classes+]><a href="[+url+]" [+link_attributes+]>[+title+]</a></li>`
					|	&rowHereTpl=`@CODE:<li[+classes+]><span>[+title+]</span></li>
					|]]