header.header.container-full
	.row.header-site
		.container.clearfix
			.header-top
				.header-top-title
					p.header-top-title-image
						|<@IF:[*id:is(1):or:is(0)*]>
						img(alt="" src!="[[phpthumb? &input=`[(logotype)]` &options=`w=64,h=64,f=png`]]")
						|<@ELSE>
						a(href="/")
							img(alt="" src!="[[phpthumb? &input=`[(logotype)]` &options=`w=64,h=64,f=png`]]")
						|<@ENDIF>
					p.header-top-title-title
						|[(company_name:notags)]
				.header-top-bvi
					a(href="javascript:;" class="bvi-open btn" title="Версия для слабовидящих")
						i.glyph-glass-eye-spectacles
	.row.header-nav
		.container.clearfix
			.navbar-site
				nav
					|[[DLMenu?
					|	&parents=`0`
					|	&maxDepth=`1`
					|	&outerTpl=`@CODE:<ul[+classes+]>[+wrap+]</ul>`
					|	&rowTpl=`@CODE:<li[+classes+]><a href="[+url+]" [+link_attributes+]>[+title+]</a></li>`
					|	&rowHereTpl=`@CODE:<li[+classes+]><span>[+title+]</span></li>
					|]]