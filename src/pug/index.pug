doctype html
html(lang="ru-Ru" prefix="og: http://ogp.me/ns#")
	// Шаблон «Главная страница»
	|
	|{{@FILE assets/templates/projectsoft/html/tpl/head.html}}
	body
		.bodywrapp
			|{{@FILE assets/templates/projectsoft/html/tpl/header.html}}
			main.main
				.container.clearfix
					|{{@FILE assets/templates/projectsoft/html/tpl/baner.html}}
					.main-section
						article.main-article
							.row
								.columns
									.col-md-8
										.column-left-block
											header.main-header
												h1
													|<@IF:[*longtitle:isnot('')*]>[*longtitle*]<@ELSE>[*pagetitle*]<@ENDIF>
											.main-content
												|[*content*]
									.col-md-4.sidebar-wrapp
										|{{@FILE assets/templates/projectsoft/html/tpl/card_contact.html}}
						.main-map.bvi-no-styles
							#map(data-point="[(map_point)]" data-addres="[(map_addres)]" data-phones="[(map_phones)]" data-email="[(map_email)]" data-zoom="[(map_zoom)]").bvi-no-styles
			|{{@FILE assets/templates/projectsoft/html/tpl/footer.html}}
		include inc/javascript.pug